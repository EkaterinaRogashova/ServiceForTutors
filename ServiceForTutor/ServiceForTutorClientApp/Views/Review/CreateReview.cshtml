@{
    ViewData["Title"] = "Обратная связь";
}
<!DOCTYPE html>
<html>
<head>
    <title>Create Review</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .profile-form {
            background-color: #DBCEF6;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
        }

            .profile-form h2, .profile-form h3 {
                text-align: center;
                margin-top: 0;
                margin-bottom: 15px;
            }


            .profile-form label {
                font-weight: bold;
            }

            .profile-form .btn-primary {
                background-color: #C5A8EA;
                color: #300E36;
                border-radius: 10px;
                padding: 10px 20px;
                width: 100%; /* Make button full width */
                margin-top: 20px; /* Add spacing above button */
            }

        .rating {
            direction: rtl; /* For right-to-left star display */
            display: flex;
        }

            .rating input {
                display: none;
            }

            .rating label {
                font-size: 2em;
                color: #ddd; /* More visible initial color */
                cursor: pointer;
            }

            .rating input:checked ~ label {
                color: gold;
            }

            .rating label:hover,
            .rating input:checked ~ label {
                color: gold;
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="card profile-form">
            <!-- Added class for styling -->
            <div class="card-body">
                <h2 class="card-title">Оставить отзыв</h2>
                <form id="reviewForm" asp-action="CreateReview" method="post">
                    <input type="hidden" id="TutorId" name="TutorId" value="[Tutor ID]">

                    <div class="form-group">
                        <label for="Rating">Рейтинг:</label>
                        <div class="rating">
                            <input type="radio" id="star5" name="Rating" value="5">
                            <label for="star5" class="full"><i class="fas fa-star"></i></label>
                            <input type="radio" id="star4" name="Rating" value="4">
                            <label for="star4" class="full"><i class="fas fa-star"></i></label>
                            <input type="radio" id="star3" name="Rating" value="3">
                            <label for="star3" class="full"><i class="fas fa-star"></i></label>
                            <input type="radio" id="star2" name="Rating" value="2">
                            <label for="star2" class="full"><i class="fas fa-star"></i></label>
                            <input type="radio" id="star1" name="Rating" value="1">
                            <label for="star1" class="full"><i class="fas fa-star"></i></label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="Content">Текст отзыва:</label>
                        <textarea class="form-control" id="Content" name="content" rows="5"></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary">Отправить</button> <!-- Changed to btn-primary -->
                </form>
            </div>
        </div>
    </div>
    <script src="https://kit.fontawesome.com/c99de67db0.js" crossorigin="anonymous"></script>  <!-- Font Awesome Kit -->
    <script src="script.js"></script>
</body>
</html>