@{
    ViewData["Title"] = "Занятие";
}

<div id="jitsiContainer"></div>
    <script src='https://meet.jit.si/external_api.js'></script>
    <script>
        // Предположим, что email получен от вашего API клиента
    const email = '@Html.Raw(APIClient.Client.Email)'; // Пример email
        const roomName = 'ProTutorRoom_' + email;

        const domain = 'meet.jit.si';
        const options = {
            roomName: roomName, // Используем сформированное имя комнаты
            width: '100%', // Ширина конференции на 100% от родительского контейнера

            parentNode: document.querySelector('#jitsiContainer'),
            configurationOverride: { 
                startWithVideoMuted: true, // Начать с выключенным видео
                startWithAudioMuted: true // Начать с выключенным звуком
            }
        };

        const api = new JitsiMeetExternalAPI(domain, options);
    </script>

<style>
    #jitsiContainer {
        margin-left: -30px;
        width: 100%;
        height: 100vh; /* Высота на весь экран */
    }
</style>