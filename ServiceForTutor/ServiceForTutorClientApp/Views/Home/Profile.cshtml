@using ServiceForTutorContracts.ViewModels
@model UserViewModel
@{
    ViewData["Title"] = "Личный кабинет";
}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="p-4" style="background-color: #DBCEF6; border-radius: 10px;">
                <h3 class="text-center" style="font-size: 24px;">Мои данные</h3>
                <img src="https://cdn-icons-png.flaticon.com/256/666/666201.png" alt="Описание изображения" style="display: block; margin: 15px auto; width: 100px; height: 100px;" />
                <div class="mb-3">
                    <strong>Имя:</strong> <span id="userName">@Html.DisplayFor(model => model.Name)</span>
                </div>
                <div class="mb-3">
                    <strong>Отчество:</strong> <span id="userLastname">@Html.DisplayFor(model => model.LastName)</span>
                </div>
                <div class="mb-3">
                    <strong>Фамилия:</strong> <span id="userSurname">@Html.DisplayFor(model => model.Surname)</span>
                </div>
                <div class="mb-3">
                    <strong>Email:</strong> <span id="userEmail">@Html.DisplayFor(model => model.Email)</span>
                </div>
                @if (APIClient.Client.Role != "Admin")
                {
                    <div class="mt-3">
                        <a class="nav-link btn rounded-pill" href="@Url.Action("EditProfile", "Home")" style="background-color: #C5A8EA; color: #300E36; border-radius: 40px;">Редактировать профиль</a>
                    </div>
                    @if (APIClient.Client.Role == "Tutor")
                    {
                        <div class="mt-3">
                            <a class="btn btn-lg w-100" href="@Url.Action("CreateReview", "Review")" style="background-color: #C5A8EA; color: #300E36; border-radius: 40px;">Оставить отзыв</a>
                        </div>
                    }
                    <div class="mt-3">
                        <button class="btn btn-lg w-100" style="background-color: #C5A8EA; color: #300E36; border-radius: 40px;">Удалить аккаунт</button>
                    </div>
                }
            </div>
        </div>
        @if (APIClient.Client.Role != "Admin")
        {
            <div class="col-md-8 d-flex flex-column" style="height: 100%;">
                <div class="d-flex flex-column flex-grow-1 justify-content-between">
                    <div class="d-flex justify-content-between mb-3">
                        @if (APIClient.Client.Role == "Tutor")
                        {
                            <a class="btn d-flex align-items-center justify-content-center" href="@Url.Action("MyStudents", "TutorStudent")" style="background-color: #C5A8EA; color: #300E36; border-radius: 10px; width: 48%; height: 260px;">Мои ученики</a>
                            <a class="btn d-flex align-items-center justify-content-center" href="@Url.Action("Schedule", "Schedule")" style="background-color: #E0D1FE; color: #300E36; border-radius: 10px; width: 48%; height: 260px;">Расписание</a>
                        }
                        else if (APIClient.Client.Role == "Student")
                        {
                            <a class="btn d-flex align-items-center justify-content-center" href="@Url.Action("MyTutors", "TutorStudent")" style="background-color: #C5A8EA; color: #300E36; border-radius: 10px; width: 48%; height: 230px;">Мои учителя</a>
                            <a class="btn d-flex align-items-center justify-content-center" href="@Url.Action("Schedule", "Schedule")" style="background-color: #E0D1FE; color: #300E36; border-radius: 10px; width: 48%; height: 230px;">Расписание</a>
                        }
                    </div>
                    @if (APIClient.Client.Role == "Tutor")
                    {
                        <div class="d-flex justify-content-between mb-3">
                            <a class="btn d-flex align-items-center justify-content-center" href="@Url.Action("Tasks", "Task")" style="background-color: #E0D1FE; color: #300E36; border-radius: 10px; width: 48%; height: 260px;">Задания</a>
                            <a class="btn d-flex align-items-center justify-content-center" href="@Url.Action("AssignedTasks", "Task")" style="background-color: #C5A8EA; color: #300E36; border-radius: 10px; width: 48%; height: 260px;">Назначенные задания</a>
                        </div>
                    }
                    else if (APIClient.Client.Role == "Student")
                    {
                        <div class="mb-3">
                            <a class="btn d-flex align-items-center justify-content-center" href="@Url.Action("AssignedTasks", "Task")" style="background-color: #E0D1FE; color: #300E36; border-radius: 10px; width: 100%; height: 230px;">Мои задания</a>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="col-md-8 d-flex flex-column" style="height: 100%;">
                @if (Model != null)
                {
                    <h3>Отзывы</h3>
                    <div class="reviews-container">
                        @foreach (var review in Model.Reviews)
                        {
                            <div class="card mb-3">
                                <div class="card-body">
                                    <h5 class="card-title">Репетитор: @review.TutorEmail</h5>
                                    <p class="card-text">Дата: @review.DateTimeCreated</p>
                                    <div class="rating">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="fas fa-star @(i <= review.Rating ? "filled" : "")"></i>
                                        }
                                    </div>
                                    <p class="card-text">@review.Content</p>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p>Отзывов нет.</p>
                }
            </div>
        }
    </div>
</div>
<script src="https://kit.fontawesome.com/c99de67db0.js" crossorigin="anonymous"></script>  <!-- Font Awesome Kit -->
<script src="script.js"></script>
<style>
    .rating i {
    font-size: 1.5em;
    color: lightgray;
    margin-right: 5px;
    }


    .rating .filled {
    color: gold;
    }
</style>